---
import '../styles/global.css';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';
import Stats from '../components/Stats.astro';
import Roadmap from '../components/Roadmap.astro';
import Subscribe from '../components/Subscribe.astro';
import Footer from '../components/Footer.astro';
---

<!DOCTYPE html>
<html lang="es">
<head>
    <BaseHead 
        title="ELECTRON - Redefining Digital Finance"
        description="Revolutionary wallet technology meets cutting-edge DeFi protocols. Experience the next generation of decentralized finance with enhanced security and performance."
    />
</head>
<body>
    <!-- Skip to main content -->
    <a href="#main-content" class="skip-link">Skip to main content</a>
    
    <!-- Header with navigation landmark -->
    <Header />
    
    <!-- Main content area -->
    <main id="main-content">
        <Hero />
        <Features />
        <Stats />
        <Roadmap />
        <Subscribe />
    </main>
    
    <!-- Footer landmark -->
    <Footer />

    <script>
        import { initializeAnimations, initializeStats, initializeSmoothScroll } from '../scripts/animations.js';

        // Initialize all animations and interactions when the page loads
        window.addEventListener('load', () => {
            initializeAnimations();
            initializeStats();
            initializeSmoothScroll();
            document.body.style.opacity = '1';
        });
    </script>
</body>
</html>
