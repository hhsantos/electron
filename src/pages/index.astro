---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';
import Stats from '../components/Stats.astro';
import Roadmap from '../components/Roadmap.astro';
import Subscribe from '../components/Subscribe.astro';
import Footer from '../components/Footer.astro';
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ELECTRON - Redefining Digital Finance</title>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
</head>
<body>
    <Header />
    <Hero />
    <Features />
    <Stats />
    <Roadmap />
    <Subscribe />
    <Footer />

    <script>
        import { initializeAnimations, initializeStats, initializeSmoothScroll } from '../scripts/animations.js';

        // Initialize all animations and interactions when the page loads
        window.addEventListener('load', () => {
            initializeAnimations();
            initializeStats();
            initializeSmoothScroll();
            document.body.style.opacity = '1';
        });
    </script>
</body>
</html>
